#!/bin/bash

# Add flathub
flatpak remote-add --if-not-exists flathub --user https://dl.flathub.org/repo/flathub.flatpakrepo

flatpak install --assumeyes --noninteractive --user \
        org.kde.ark \
        org.kde.dolphin \
        org.videolan.VLC \
        org.kde.gwenview \
        org.kde.konsole \
        org.kde.kwrite \
        org.kde.okular \
        org.mozilla.firefox